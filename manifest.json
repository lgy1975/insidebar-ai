{
  "manifest_version": 3,
  "name": "insidebar.ai",
  "version": "1.2.0",
  "description": "Multi-AI sidebar extension for quick access to ChatGPT, Claude, Gemini, and more",

  "browser_specific_settings": {
    "gecko": {
      "id": "insidebar-ai@xiaolai.github.io",
      "strict_min_version": "115.0"
    }
  },

  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "clipboardRead"
  ],

  "host_permissions": [
    "*://chatgpt.com/*",
    "*://chat.openai.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://grok.com/*",
    "*://chat.deepseek.com/*",
    "*://www.perplexity.ai/*",
    "*://perplexity.ai/*",
    "*://www.perplexity.ai/*",
    "*://perplexity.ai/*"
  ],

  "optional_host_permissions": [
    "*://localhost/*",
    "*://127.0.0.1/*",
    "*://*/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },

  "options_page": "options/options.html",

  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Open insidebar.ai"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open insidebar.ai with default provider"
    },
    "open-prompt-library": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open insidebar.ai Prompt Library"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },


  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-chatgpt.js",
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/conversation-extractor-utils.js",
        "content-scripts/chatgpt-history-extractor.js"
      ],
      "css": ["content-scripts/chatgpt-save-button.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": [
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/conversation-extractor-utils.js",
        "content-scripts/claude-history-extractor.js"
      ],
      "css": ["content-scripts/claude-save-button.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-gemini.js",
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/conversation-extractor-utils.js",
        "content-scripts/gemini-history-extractor.js"
      ],
      "css": ["content-scripts/gemini-save-button.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://grok.com/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-grok.js",
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/conversation-extractor-utils.js",
        "content-scripts/grok-history-extractor.js"
      ],
      "css": ["content-scripts/grok-save-button.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-deepseek.js",
        "content-scripts/text-injection-all-providers.js",
        "content-scripts/conversation-extractor-utils.js",
        "content-scripts/deepseek-history-extractor.js"
      ],
      "css": ["content-scripts/deepseek-save-button.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-perplexity.js",
        "content-scripts/conversation-extractor-utils.js",
        "content-scripts/perplexity-history-extractor.js"
      ],
      "css": ["content-scripts/perplexity-save-button.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "bypass_headers",
        "enabled": true,
        "path": "rules/bypass-headers.json"
      }
    ]
  },

  "web_accessible_resources": [
    {
      "resources": ["data/prompt-libraries/default-prompts.json"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
