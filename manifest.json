{
  "manifest_version": 3,
  "name": "insidebar.ai",
  "version": "1.2.0",
  "description": "Multi-AI sidebar extension for quick access to ChatGPT, Claude, Gemini, and more",

  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],

  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://grok.com/*",
    "https://chat.deepseek.com/*"
  ],

  "optional_host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },

  "options_page": "options/options.html",

  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Open insidebar.ai"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      }
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },


  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-chatgpt.js",
        "content-scripts/text-injection-all-providers.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": [
        "content-scripts/text-injection-all-providers.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-gemini.js",
        "content-scripts/text-injection-all-providers.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://grok.com/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-grok.js",
        "content-scripts/text-injection-all-providers.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": [
        "content-scripts/enter-behavior-utils.js",
        "content-scripts/enter-behavior-deepseek.js",
        "content-scripts/text-injection-all-providers.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "bypass_headers",
        "enabled": true,
        "path": "rules/bypass-headers.json"
      }
    ]
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
